<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>Listado de Articulos</h3>
      </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_content">
            <div class="row">
              <div class="col-sm-12">
            <%= link_to "otros/nuevo" , class:"btn btn-success" do %>
                Agregar articulo <span class="fa fa-plus"></span>
              <% end %>
                <div class="card-box table-responsive">
                  <table id="datatable" class="table table-striped table-bordered">
                    <thead>
                      <tr>
                        <th style="width:20%" class="text-center">Código</th>
                        <th style="width:20%" class="text-center">Marca</th>
                        <th style="width:20%" class="text-center">Fecha de compra</th>
                        <th style="width:20%" class="text-center">Acciones</th>
                      </tr>
                    </thead>
                    <tbody>
                    <% @otros.each do |otro| %>
                      <td class="hidden-xs text-center"><%= otro.codotro %></td>
                      <td class="text-center"><%= otro.marca %></td>
                      <td class="text-center"><%= otro.fechacompra.to_date %></td>
                      <td>
                        <div class="btn-toolbar margin-bottom-10">
                          <div class="btn-group btn-group-sm btn-group-solid">
                              <a href="/otros/editar/<%= otro.id %>" title="Editar" class="btn btn-warning"><i class="fa fa-edit"></i></a>

                              <a id="<%= otro.id %>" class="btn btn-danger delete-data eliminar" title="Eliminar" ><i class="fa fa-trash-o"></i></a>
                          </div>
                        </div>
                      </td>
                    </tr>
                   <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>

          </div>
          </div>
        </div>
        </div>
        <!-- Modal -->
          <div id="myModal" class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none">
            <div class="modal-dialog modal-sm">
                      <div class="modal-content">

                        <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span>
                          </button>
                          <h3 class="modal-title text-center" id="myModalLabel2">Eliminar Articulo</h3>
                        </div>
                        <div class="modal-body">
                          <h4>Esta seguro que desea eliminar este articulo?</h4>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-default" data-dismiss="modal">Volver</button>
                          <button id="confirmar-eliminar" type="button" class="btn btn-danger">Elminar</button>
                        </div>

                      </div>
                    </div>
          </div>

      </div>

      <!-- /page content -->
<script>
$('#myModal').on('show', function() {
    var id = $(this).data('id'),
        removeBtn = $(this).find('.danger');
})

$('.eliminar').on('click', function(e) {
    var id = $(this).attr('id');
    $('#myModal').data('id', id).modal('show');

});

$('#confirmar-eliminar').click(function(){
    var id = $("#myModal").data('id');
    $.ajax({
        url: "/otros/eliminar/" + id,
        type: "get",
        data: id,
        success: function (data) {
          window.location.replace("http://localhost:3000/otros");
          }
      });
});

</script>
